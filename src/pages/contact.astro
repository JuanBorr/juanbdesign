---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Contáctame - Juan Borrero">
  <section>
    <h1>Contáctame</h1>
    <form action="/contact" method="POST">
      <label for="name">
        <span>Nombre</span>
        <input type="text" id="name" name="name" maxlength="50" placeholder="Nombre" required>
      </label>
      <label for="email">
        <span>Email</span>
        <input type="email" id="email" name="email" placeholder="Email" required>
      </label>
      <label for="message">
        <span>Mensaje</span>
        <textarea rows="4" id="message" name="message" placeholder="Mensaje" required></textarea>
      </label>
      <button type="submit">Enviar</button>
    </form>
  </section>
</Layout>

<style>
  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    height: calc(100vh - 5rem);
  }

  section h1 {
    margin: 0;
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
  }

  form {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    width: 100%;
    max-width: 40rem;
  }

  label {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    width: 100%;
  }

  label span {
    font-size: 1.5rem;
    line-height: 1;
  }

  input,
  textarea {
    padding: 0.8rem 1rem;
    width: 100%;
    color: white;
    background-color: hsl(var(--bg-light));
    border: none;
    border-radius: 0.25rem;
    font-family: inherit;
    font-size: 1.25rem;
    font-weight: 400;
    line-height: 1;
    resize: none;
    outline: 4px solid transparent;
    transition: outline 0.2s ease-in-out;
  }
  input:focus-visible,
  textarea:focus-visible {
    outline: 4px solid hsl(var(--accent-light));
  }

  button {
    padding: 0.8em 1.2em;
    color: white;
    background-color: hsl(var(--accent-dark));
    border: none;
    border-radius: 0.25rem;
    font-size: 1.35rem;
    line-height: 1;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
  }
  button:hover {
    background-color: hsl(var(--accent));
  }
  button:focus-visible {
    outline: 4px solid hsl(var(--accent-light));
  }
</style>
